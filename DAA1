#include <iostream>
using namespace std;

int stepCountRec = 0;  // global counter for recursive steps
int stepCountItr = 0;  // counter for iterative steps

// Recursive Fibonacci
int fibRecursive(int n) {
    stepCountRec++;
    if (n <= 1)
        return n;
    return fibRecursive(n - 1) + fibRecursive(n - 2);
}

// Iterative Fibonacci
int fibIterative(int n) {
    stepCountItr = 0;
    if (n <= 1) return n;
    int a = 0, b = 1, c;
    for (int i = 2; i <= n; i++) {
        stepCountItr++;
        c = a + b;
        a = b;
        b = c;
    }
    return b;
}

int main() {
    int n;
    cout << "Enter n: ";
    cin >> n;

    stepCountRec = 0;
    int fibRec = fibRecursive(n);
    cout << "Recursive Fibonacci(" << n << ") = " << fibRec
         << " | Steps: " << stepCountRec << endl;

    int fibItr = fibIterative(n);
    cout << "Iterative Fibonacci(" << n << ") = " << fibItr
         << " | Steps: " << stepCountItr << endl;

    return 0;
}
